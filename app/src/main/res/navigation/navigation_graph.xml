<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcom_nav"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/accountOptionFragment"
        android:name="com.example.e_comstarterdevsstream.ui.fragment.logInAndRegister.AccountOptionFragment"
        android:label="fragment_account_option"
        tools:layout="@layout/fragment_account_option" >
        <action
            android:id="@+id/action_accountOptionFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_accountOptionFragment_to_logInFragment"
            app:destination="@id/logInFragment" />
    </fragment>
    <fragment
        android:id="@+id/logInFragment"
        android:name="com.devsstore.devsstore.ui.fragment.logInAndRegister.LogInFragment"
        android:label="fragment_log_in"
        tools:layout="@layout/fragment_log_in" >
        <action
            android:id="@+id/action_logInFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_logInFragment_to_resetPasswordFragment"
            app:destination="@id/resetPasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.e_comstarterdevsstream.ui.fragment.logInAndRegister.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_logInFragment"
            app:destination="@id/logInFragment" />
    </fragment>
    <fragment
        android:id="@+id/resetPasswordFragment"
        android:name="com.devsstore.devsstore.ui.fragment.logInAndRegister.ResetPasswordFragment"
        android:label="fragment_reset_password"
        tools:layout="@layout/fragment_reset_password" >
        <action
            android:id="@+id/action_resetPasswordFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.e_comstarterdevsstream.ui.fragment.shopping.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.devsstore.devsstore.ui.fragment.shopping.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_sofaSetFragment"
            app:destination="@id/sofaSetFragment" />
        <action
            android:id="@+id/action_searchFragment_to_sofaSetFragment2"
            app:destination="@id/sofaSetFragment" />
    </fragment>
    <fragment
        android:id="@+id/sofaSetFragment"
        android:name="com.example.e_comstarterdevsstream.ui.fragment.shopping.SofaSetFragment"
        android:label="fragment_sofa_set"
        tools:layout="@layout/fragment_sofa_set" >
        <action
            android:id="@+id/action_sofaSetFragment_to_profilesFragment"
            app:destination="@id/profilesFragment" />
    </fragment>
    <fragment
        android:id="@+id/profilesFragment"
        android:name="com.example.e_comstarterdevsstream.ui.fragment.profile.ProfilesFragment"
        android:label="fragment_profiles"
        tools:layout="@layout/fragment_profiles" >
        <action
            android:id="@+id/action_profilesFragment_to_checkoutConfirmationFragment"
            app:destination="@id/checkoutConfirmationFragment" />
    </fragment>
    <fragment
        android:id="@+id/paymentAddFragment"
        android:name="com.example.e_comstarterdevsstream.ui.activity.checkout.fragments.PaymentAddFragment"
        android:label="fragment_payment_add"
        tools:layout="@layout/fragment_payment_add" />
    <fragment
        android:id="@+id/checkoutConfirmationFragment"
        android:name="com.example.e_comstarterdevsstream.ui.activity.checkout.fragments.CheckoutConfirmationFragment"
        android:label="fragment_checkout_confirmation"
        tools:layout="@layout/fragment_checkout_confirmation" >
        <action
            android:id="@+id/action_checkoutConfirmationFragment_to_paymentAddFragment"
            app:destination="@id/paymentAddFragment" />
    </fragment>
    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.example.e_comstarterdevsstream.ui.fragment.splashAndWelcome.SplashScreenFragment"
        android:label="fragment_spalsh_screen"
        tools:layout="@layout/fragment_spalsh_screen" >
        <action
            android:id="@+id/action_splashScreenFragment_to_viewPagerFragment"
            app:destination="@id/viewPagerFragment"
            app:popUpTo="@id/splashScreenFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/viewPagerFragment"
        android:name="com.example.e_comstarterdevsstream.ui.fragment.splashAndWelcome.ViewPagerFragment"
        android:label="fragment_view_pager"
        tools:layout="@layout/fragment_view_pager" >
        <action
            android:id="@+id/action_viewPagerFragment_to_accountOptionFragment"
            app:destination="@id/accountOptionFragment"
            app:popUpTo="@id/viewPagerFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>